<?xml version="1.0" encoding="UTF-8"?>

<plugin xmlns="http://apache.org/cordova/ns/plugins/1.0"
xmlns:android="http://schemas.android.com/apk/res/android"
           id="com.ca.apim"
      version="0.1.0">
    <name>MAS</name>
    <description>Cordova MAS Plugin</description>
    <license>CA Technologies Ltd.</license>
    <keywords>cordova, MAS, CA Technologies</keywords>

    <js-module src="www/MASPlugin.js" name="MASPlugin">
        <clobbers target="MASPlugin" />
    </js-module>

    <!-- iOS -->
    <platform name="ios" >
        <config-file target="config.xml" parent="/*" >
            <feature name="com.ca.apim.MASPlugin" >
                <param name="ios-package" value="MASPlugin"/>
            </feature>
        </config-file>
        
        <header-file src="src/ios/MASPlugin.h" />
        <source-file src="src/ios/MASPlugin.m" />
        
    </platform>

    <!-- Android -->
    <platform name="android">
        <config-file target="res/xml/config.xml" parent="/*">
            <feature name="com.ca.apim.MASPlugin" >
                <param name="android-package" value="com.ca.apim.MASPlugin"/>
            </feature>
        </config-file>

        <config-file target="AndroidManifest.xml" parent="/*">
            <uses-permission android:name="android.permission.INTERNET"/>
        </config-file>

        <source-file src="src/android/Command.java" target-dir="src/com/ca/apim" />
        <source-file src="src/android/MASCommand.java" target-dir="src/com/ca/apim" />
        <source-file src="src/android/MASDeviceCommand.java" target-dir="src/com/ca/apim" />
        <source-file src="src/android/MASPlugin.java" target-dir="src/com/ca/apim" />
        <source-file src="src/android/MASUserCommand.java" target-dir="src/com/ca/apim" />

        <framework src="com.madgag:scprov-jdk15on:1.47.0.2" />
        <framework src="com.madgag:sc-light-jdk15on:1.47.0.2" />
        <framework src="com.google.zxing:core:3.2.0" />
        <framework src="com.android.support:appcompat-v7:23+" />
    </platform>
</plugin>

